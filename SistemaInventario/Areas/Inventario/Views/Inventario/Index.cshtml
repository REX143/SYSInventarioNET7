@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-6">
        <h2 class="text-primary">Stock de Productos</h2>
    </div>

    <div class="col-lg-6 text-end">
        <a class="btn btn-outline-primary" asp-action="NuevoInventario"><i class="bi bi-pci-card"></i>  Nuevo Inventario</a>
        <a class="btn btn-outline-info" asp-action="KardexProducto"><i class="bi bi-card-checklist"></i> Kardex</a>
    </div>

    <br />

    <div class="p-4 border rounded bg-light mt-2">
        <table id="tblDatos" class="table table-responsive table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Bodega</th>
                    <th>Producto</th>
                    <th>Costo</th>
                    <th>Cantidad</th>
                </tr>
            </thead>
        </table>
    </div>


</div>

@section Scripts{
    <script src="~/js/inventario.js"></script>
}

